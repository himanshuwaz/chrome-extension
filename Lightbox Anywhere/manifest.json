{
  "manifest_version": 3,
  "name": "Lightbox Anywhere",
  "description": "Enable a clean, keyboard-friendly image lightbox on the current page.",
  "version": "1.0.0",
  "action": {
    "default_title": "Enable Lightbox",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ]
}